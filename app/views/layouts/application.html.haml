%html.no-js{:lang => 'en'}
  <!--<![endif]-->

  %head
    %title Be Awesome - Get Shit Done
    %meta{:charset => "utf-8"}
    %meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    // check if JS is enabled in browser
    :javascript
      document.documentElement.className = document.documentElement.className.replace(/\bno-js\b/,'') + ' js';

    = stylesheet_link_tag 'application', :media => 'all'
    = csrf_meta_tags
    /[if lt IE 9]
      %script{:src => "http://html5shiv.googlecode.com/svn/trunk/html5.js"}
      = javascript_include_tag 'libs/selectivizr-min.js'
    
  %body{:class => controller.controller_name}

    #wrapper
      %header
        %a.head_btn.head_cancel{:href => "javascript:history.back()", :title => "Cancel"} Cancel
        Be Awesome
        %a.head_btn.head_home{:href => "#", :title => "Settings"} Settings

      #content
        = yield

      %footer
        %li
          %a{:href => "/"} My advantures
        %li
          %a{:href => "/"} I'm supporting

    = yield :scripts
    = render "layouts/config_js"
    = javascript_include_tag 'application'
    = yield :init_scripts
