%script#adventure-template{:type => "text/x-handlebars-template"}
  %h1 {{title}}
  %ol.list.list_posts
    {{#each posts}}
    %li
      %table
        %tr
          %td
            %img{:src => '{{author.avatar_path}}', :alt => 'author avatar'}
          %td
            %div
              %small
                %strong.list-user {{author.name}}
                on
                %span.created-at {{created_at}}
                said:
            .post {{body}}
    {{/each}}

  %form#addNewPostForm
    %h2 New Post
    %div
      %textarea{:name => 'new_post'}
    %div
      %a.button{:href => "#"} Add Post
